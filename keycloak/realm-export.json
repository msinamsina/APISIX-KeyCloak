{
  "id": "apisix-demo",
  "realm": "apisix-demo",
  "displayName": "APISIX Demo Realm",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Regular user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ],
    "client": {
      "apisix-client": [
        {
          "name": "api-access",
          "description": "API Access role for APISIX protected services"
        }
      ]
    }
  },
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "testuser@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "testpassword",
          "temporary": false
        }
      ],
      "realmRoles": ["user"],
      "clientRoles": {
        "apisix-client": ["api-access"]
      }
    },
    {
      "username": "adminuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "adminpassword",
          "temporary": false
        }
      ],
      "realmRoles": ["admin", "user"],
      "clientRoles": {
        "apisix-client": ["api-access"]
      }
    }
  ],
  "clients": [
    {
      "clientId": "apisix-client",
      "name": "APISIX Gateway Client",
      "description": "OIDC Client for APISIX Gateway authentication",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "apisix-client-secret",
      "redirectUris": [
        "http://localhost:9080/*"
      ],
      "webOrigins": [
        "http://localhost:9080",
        "+"
      ],
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "fullScopeAllowed": true,
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:9080/*"
      }
    }
  ],
  "browserSecurityHeaders": {
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self' http://localhost:9080; object-src 'none';"
  }
}
